#!/bin/bash

## not sophisticated
## build the binary into the web site directory and rename it
SERVERNAME=your-servername
go build -o /home/nsa/websites/${SERVERNAME}/bin/ip.cgi  ip.go
cp css/ip.css /home/nsa/websites/${SERVERNAME}/css/ip.css
cp images/background.png /home/nsa/websites/${SERVERNAME}/images/background.png
cp html/ip.html /home/nsa/websites/${SERVERNAME}/html/ip.html

